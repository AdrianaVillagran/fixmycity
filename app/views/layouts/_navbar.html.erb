<nav>
  <div class="nav-wrapper blue-grey lighten-1">
    <a href="/reports" class="brand-logo">Fix My City</a>
    <ul class="right hide-on-med-and-down">
      <% if current_user %>
        <li><%= link_to "Profile", user_path(current_user) %></li>
        <li><%= link_to "Log Out", logout_path %></li>
      <% else %>
        <li><%= link_to "Sign Up", new_user_path %></li>
        <li><%= link_to "Log In", login_path %></li>
      <% end %>
      <li>
        <% flash.each do |name, msg| %>
          <div class="chip <% if name=="error" || name=="alert" %> red <% else %> green lighten-1 <% end %>">
            <span class="white-text"><%=  msg %></span>
            <i class="material-icons">close</i>
          </div>
        <% end %>
      </li>
      <li> <%= link_to "All User Reports", reports_path, :"data-no-turbolink" => true %> </li>
      <li> <%= link_to "Confirmed Issues", confirmed_issues_path, :"data-no-turbolink" => true %> </li>
    </ul>
  </div>
</nav>
