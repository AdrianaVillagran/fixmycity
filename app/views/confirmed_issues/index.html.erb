<div class="row">
  <div class="col s3 sidebar">
    <h5>All Confirmed Issues</h5>
    <% @confirmed_issues.each do |issue| %>
      <b>Issue #<%= issue.id %></b> <br>
      <%= link_to issue.title, confirmed_issue_path(issue) %> <br><br>
    <% end %>
  </div>
  <div class="col s9">
      <div class="fixed-action-btn" style="top: 70px; right: 24px; z-index: 3">
        <a class="modal-trigger waves-effect waves-light red btn"
           href="#report-modal">Make a Report</a>
      </div>
    <%= render "reports/map" %>
  </div>
</div>

<!-- Modal Structure -->
<div id="report-modal" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>Report an Issue</h4>
    <%= render "form" %>
  </div>
  <div class="modal-footer">
    <a href="#!" data-no-turbolink="true" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
  </div>
</div>

<%= render "reports/modal" %>
